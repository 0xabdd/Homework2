@page
@model AgeCalculator.Pages.IndexModel
@{
    ViewData["Title"] = "Age Calculator";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <h2>Person 1</h2>
    <div>
        <label for="person1Name">Name:</label>
        <input type="text" id="person1Name" name="Person1.Name" required>
    </div>
    <div>
        <label for="person1BirthDate">Birth Date:</label>
        <input type="date" id="person1BirthDate" name="Person1.BirthDate" required>
    </div>

    <h2>Person 2</h2>
    <div>
        <label for="person2Name">Name:</label>
        <input type="text" id="person2Name" name="Person2.Name" required>
    </div>
    <div>
        <label for="person2BirthDate">Birth Date:</label>
        <input type="date" id="person2BirthDate" name="Person2.BirthDate" required>
    </div>

    <h2>Person 3</h2>
    <div>
        <label for="person3Name">Name:</label>
        <input type="text" id="person3Name" name="Person3.Name" required>
    </div>
    <div>
        <label for="person3BirthDate">Birth Date:</label>
        <input type="date" id="person3BirthDate" name="Person3.BirthDate" required>
    </div>

    <div>
        <button type="submit">Calculate</button>
    </div>
</form>

@if (ViewData["Person1Age"] != null && ViewData["Person2Age"] != null && ViewData["Person3Age"] != null)
{
    <h2>Ages:</h2>
    <ul>
        <li>@ViewData["Person1Age"]</li>
        <li>@ViewData["Person2Age"]</li>
        <li>@ViewData["Person3Age"]</li>
    </ul>
}
